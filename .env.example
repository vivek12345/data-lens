# MySQL Analytics MCP Server Configuration
# Copy this file to .env and update with your values

# ==========================================
# SSH Tunnel Configuration
# ==========================================
# Enable SSH tunnel (true/false)
USE_SSH_TUNNEL=true

# SSH server details
SSH_HOST=your-ssh-host.com
SSH_PORT=22
SSH_USER=your-ssh-username

# SSH authentication (use either key or password)
SSH_KEY_PATH=~/.ssh/id_rsa
# SSH_PASSWORD=your-ssh-password

# ==========================================
# MySQL Database Configuration
# ==========================================
# Database connection details
DB_HOST=localhost
DB_PORT=3306
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name

# Local bind port for SSH tunnel (must be available)
LOCAL_BIND_PORT=3307

# ==========================================
# Server Configuration
# ==========================================
# HTTP server settings (when not using Claude Desktop)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Claude Desktop mode (set to 1 when running with Claude Desktop)
# CLAUDE_DESKTOP=1

# ==========================================
# Authentication (Future Feature)
# ==========================================
# Enable authentication
AUTH_ENABLED=false
# Secret key for JWT tokens (change in production)
AUTH_SECRET_KEY=change-me-in-production
